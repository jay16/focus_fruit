<script>
  //提交
  function order_submit() {
    var order_state = check_out();    
    if(order_state[0]==0) {
      alert("请选择水果");
    } else {
      $(".order-modal").modal("show");
    }
  }

  //遍历所有单类水果计算总数量与总价
  function check_out() {
    var total_count = 0;
    var total_price = 0;
    $(".fruit").each(function(e){
       var id = $(this).attr("id");
       var name  = parseInt($("#"+id+" .name").text());
       var price = parseInt($("#"+id+" .price").text());
       var count = parseInt($("#"+id+" .count").text());
       var result = price * count;
       total_count += count;
       total_price += result;
    });
    //alert(total_count);
    $(".total-count").text(total_count);
    $(".total-price").text(total_price);
    return [total_count, total_price];
  };


  //购物车信息=> json
  //购物车列表
  function chk_order_list() {
    var list = new Array();
    var shop_cart  = "";
    var order_info = "";

    $(".fruit").each(function(e){
       var id = $(this).attr("id");
       var name = $("#"+id+" .name").text();
       var price = parseInt($("#"+id+" .price").text());
       var count = parseInt($("#"+id+" .count").text());
       if(count > 0) {
         //list.push('{' + '"id":'+ id.split("_")[1]+ ',"count":' + count + ',"price":' +  price +'}')
	 var json = {"id": id.split("_")[1], "name": name, "count": count, "price": price};
	 list.push(JSON.stringify(json));

	 shop_cart += "<div class='row-fluid' style='margin-bottom:3px;'>"
         shop_cart += "<span class='span4'>"
         shop_cart += "<span class='label label-info' style='height:15px;'>￥"+price+"</span>x<span>"+count+"</span>"
         shop_cart += "</span>"
         shop_cart += "<span class='span7'>"+name+"</span>"
         shop_cart += "<span class='span1'><i class='icon-remove'></i></span></div>"

	 order_info += "<div class='row-fluid' style='margin-bottom:3px;'>"
         order_info += "<span class='span4'><span class='label label-info' style='height:15px;'>￥"+price+"</span>x<span>"+count+"</span>"
	 order_info += "</span>"
	 order_info += "<span class='span8'>"+name+"</span></div>"
       }
    });
    var order_rt = check_out();
    order_info += "<div class='row-fluid' style='margin-bottom:3px;'><span class='span4'>数量:<span class='label label-info'>" + order_rt[0] + "</span></span><span class='span6'>总金额:<span class='label label-info'>" + order_rt[1] + "</span></span></div>"

    $("#order_item_list").attr("value","["+list.toString()+"]");
    $("#order_info").attr("value", order_info);
    $("#order_count").attr("value", order_rt[0]);
    $("#order_checkout").attr("value", order_rt[1]);
    $(".order-items").html(shop_cart);
  }

  function toggle_show_order_list(what) {
    if(what==true) {
      $(".order-form").css("display","none");
      $(".order-list").css("display","block");
    } else {
      $(".order-form").css("display","block");
      $(".order-list").css("display","none");
    }
  }
function add_to_cart(item) {
   operate_item("add",item);
}
function rm_from_cart(item) {
   operate_item("rm",item);
}
function operate_item(operation, item) {
  var weixin  = $("#hidden_weixin").attr("value");
  if(operation == "add") {
    url = "/shop_carts/add.json";
  } else {
    url = "/shop_carts/rm.json";
  }
  $.post(url,
  {
    weixin: weixin,
    item: item
  },
  function(data,status){
    //if(status=="success")
    console.log(status);
  });
}

function shop_cart_list() {
  var weixin  = $("#hidden_weixin").attr("value");
  var res = [];

  $.get("/shop_carts/list.json",
    {
      weixin: weixin
    },
    function(result){
      //alert(result.length);

      if(result.length>0) {
        $(".fruit").each(function(e){
	  var id = $(this).attr("id");

	  for(var i=0;i<result.length;i++) {
	    var item = result[i];
	    //alert(item.id+'-'+id);
	    if(item.id == id) 
	      $("#"+id+" .count").html(item.count);
	  }
	  check_out();
	  chk_order_list();
	});
      }
    }
  );
  return res;
}
function clear_shop_cart() {
  var weixin  = $("#hidden_weixin").attr("value");
  $.get("/shop_carts/clear.json",
    { weixin: weixin },
    function(result){}
  );
};
$(function(){
  $("#new_order").submit(function(event) {
    clear_shop_cart();
  });
  //添加或删减水果
  $(".fruit").each(function(e){
      var id = $(this).attr("id");

      var name = $("#"+id+" .name").text();
      var price = parseInt($("#"+id+" .price").text());
      var count = parseInt($("#"+id+" .count").text());
      var item = { "id": id, "name": name, "price": price };

      //add 
      $("#"+id+" .buy-more").click(function(){
        var $buy_count = $("#"+id+" .count");
        var already_budy = parseInt($buy_count.text());
        already_budy += 1;
        $buy_count.text(already_budy);
	add_to_cart(item);
        check_out();
        chk_order_list();
      });
      //plus
      $("#"+id+" .buy-less").click(function(){
        var $buy_count = $("#"+id+" .count");
        var already_budy = parseInt($buy_count.text());
        if(already_budy>0) {
          already_budy -= 1;
	  rm_from_cart(item);
	}
        $buy_count.text(already_budy);
        check_out();
	chk_order_list();
      });

  });

});
</script>

