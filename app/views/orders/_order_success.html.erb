<% @order= Order.last %>

<div id="order_success_items" style="display:none;">
  <table class="table table-hover" style="width:500px">
    <% total_count = 0 %>
    <tr>
      <td colspan="2" style="text-align:left;">
	  下单成功：
      </td>
    </tr>
    <% @order.items.each do |item| %>
      <tr>
	<td width="50%"><strong><%= item.name %></strong></td>
	<% total_count += item.price*item.count %>
	<td width="50%"><label class="label label-info" style="display:inline;">￥<%= item.price %></label>x<%= item.count %></td>
      </tr>
    <% end %>
    <tr class="success">
      <td colspan="2">共计:￥<label class="label label-success" style="display:inline;"><%= total_count %></label></td>
    </tr>
    <tr>
      <td colspan="2">
	<a onclick="window.location.reload();" class="btn">
	  继续购物
	</a>
        <a onclick="$('#order_success_customer').css('display','block');$('#order_success_items').css('display','none');" class="btn btn-primary">
	  联系信息
	</a>
      </td>
    </tr>
  </table>
</div>
<div id="order_success_customer">
  <table class="table table-hover" style="width:500px">
    <tr>
      <td colspan="2" style="text-align:left;">
	  联系信息：
      </td>
    </tr>
    <tr>
      <td width="20%">名称</td>
      <td><%= @order.name %></td>
    </tr>
    <tr>
      <td width="20%">电话</td>
      <td><%= @order.phone %></td>
    </tr>
    <tr>
      <td width="20%">地址</td>
      <td><%= @order.address %></td>
    </tr>
    <tr>
      <td width="20%">配送时间</td>
      <td><%= @order.date_at %></td>
    </tr>
    <tr>
      <td width="20%">留言</td>
      <td><%= @order.remark %></td>
    </tr>
    <tr>
      <td colspan="2">
	<a onclick="window.location.reload();" class="btn">
	  继续购物
	</a>
	<a onclick="$('#order_success_customer').css('display','none');$('#order_success_items').css('display','block');" class="btn btn-primary">
	  订单信息
	</a>
      </td>
    </tr>
  </table>
</div>


