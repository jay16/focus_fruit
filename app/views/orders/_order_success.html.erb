

<table class="table table-hover" style="width:500px">
  <% total_count = 0 %>
  <tr>
    <td colspan="2" style="text-align:left;">
	您的商品列单如下：
    </td>
  </tr>
  <% @order.items.each do |item| %>
    <tr>
      <td width="50%"><strong><%= item.name %></strong></td>
      <% total_count += item.price*item.count %>
      <td width="50%"><label class="label label-info" style="display:inline;">￥<%= item.price %></label>x<%= item.count %></td>
    </tr>
  <% end %>
  <tr class="success">
    <td colspan="2">共计:￥<label class="label label-success" style="display:inline;"><%= total_count %></label></td>
  </tr>
  <tr>
    <td colspan="2">
    稍等我们会联系您...
    <a onclick="window.location.reload();" class="btn">
      继续购物
    </a>
    </td>
  </tr>
</table>


