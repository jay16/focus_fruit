<%= simple_form_for(@picture) do |f| %>

  <%= f.input :name, wrapper: :prepend, label: false do %>
    <%= content_tag :span, content_tag(:span, "名称", class: ""), class: "add-on" %>
    <%= f.input_field :name, placeholder: "图片文件夹名称", autofocus: true, class: "span10" %>
  <% end %>

  <%= f.input :desc,wrapper: :prepend, label: false, class: "span6" do %>
    <%= content_tag :span, content_tag(:span, "描述", class: ""), :class => "add-on" %>
    <%= f.input_field :desc, as: :text, placeholder: "文件夹描述", class: "span10", style: "height:200px;"%>
  <% end %>

  <div class="control-group">
    <div class="controls">
	<%= f.button :submit, "提交", class: "btn", style: "margin-bottom: 20px;" %>
	<%= link_to '删除', @picture, method: :delete, remote: true, class: "right",
	  confirm: '此动作不可撤消，肯定删除?' %>
    </div>
  </div>
<% end %>
