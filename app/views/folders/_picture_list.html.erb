<table class="table table-hover">
  <thead>
    <tr>
      <th width="10%">图片</th>
      <th width="60%">名称</th>
      <th width="10%">大小</th>
      <th width="10%">编辑</th>
     </tr>
   </thead>
   <tbody>
    <% @folder.pictures.order("created_at desc").each do |picture| %>
      <%= render partial: "folders/picture_list_row", locals: { picture: picture } %>
    <% end if @folder.pictures %>
  </tbody>
</table>
