<%= simple_form_for(@folder ) do |f| %>

  <%= f.input :name, wrapper: :prepend, label: false do %>
    <%= content_tag :span, content_tag(:span, "名称", class: ""), class: "add-on" %>
    <%= f.input_field :name, placeholder: "图片文件夹名称", autofocus: true, class: "span12" %>
  <% end %>

  <%= f.input :desc,wrapper: :prepend, label: false, class: "span6" do %>
    <%= content_tag :span, content_tag(:span, "描述", class: ""), :class => "add-on" %>
    <%= f.input_field :desc, as: :text, placeholder: "文件夹描述", class: "span12", style: "height:300px;"%>
  <% end %>

  <div class="control-group">
    <div class="controls">
	<%= f.button :submit, "提交", class: "btn right" %>
    </div>
  </div>
<% end %>
