
  <%= link_to '新建博文', new_blog_path, class: "btn", target: "blank" %>

  <table class="table table-hover">
    <tr>
      <th>标题</th>
      <th>类型</th>
      <th>作者</th>
      <th>阅读</th>
      <th>编辑</th>
      <th>删除</th>
    </tr>

  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td>
          <span class="label label-info"> 
	    <%= blog.type %>
	  </span>
      </td>
      <td>
          <span class="label label-success"> 
	    <%= blog.author %>
	  </span>
      </td>
      <td><%= link_to '阅读', blog, class: "btn btn-mini btn-info", target: "blank" %></td>
      <td><%= link_to '编辑', edit_blog_path(blog), class: "btn btn-mini btn-success", target: "blank" %></td>
      <td>
        <% if blog.klass == "blog" %>
	  <%= link_to '删除', blog, confirm: '此动作不可撤消，肯定删除?', method: :delete, class: "btn btn-mini btn-danger"%>
	<% else %>
	  <strike>删除</strike>
	<% end %>
      </td>
    </tr>
  <% end %>
  </table>

