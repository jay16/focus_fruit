<div class="span6 offset3">

  <h3>博文列表
    <small><%= link_to '新建', new_blog_path %></small>
  </h3>

  <table class="table table-hover">
    <tr>
      <th>类型</th>
      <th>标题</th>
      <th>作者</th>
      <th>阅读</th>
      <th>编辑</th>
      <th>删除</th>
    </tr>

  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td>
          <label class="center label label-info"> 
	    <%= blog.type %>
	  </label>
      </td>
      <td>
          <label class="center label label-success"> 
	    <%= blog.author %>
      </td>
      <td><%= link_to '阅读', blog %></td>
      <td><%= link_to '编辑', edit_blog_path(blog) %></td>
      <td>
        <% if bloog.type == "blog" %>
	  <%= link_to '删除', blog, confirm: '此动作不可撤消，肯定删除?', method: :delete %>
      </td>
    </tr>
  <% end %>
  </table>

  <br />

</div>
