<div class="span6 offset3">

  <h1>博文列表</h1>

  <table class="table">
    <tr>
      <th>Titile</th>
      <th>Type</th>
      <th>Author</th>
      <th>Link</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.type %></td>
      <td><%= blog.author %></td>
      <td><%= blog.link %></td>
      <td><%= link_to 'Show', blog %></td>
      <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
      <td><%= link_to 'Destroy', blog, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to '新建博文', new_blog_path %>
</div>
